# EditorConfig for TugasinWP Theme
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4
indent_style = tab

[*.{css,scss,less}]
indent_size = 4
indent_style = space

[*.js]
indent_size = 4
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab
